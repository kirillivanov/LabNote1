<div class="rounded" style="background: white; width: 400px; margin-bottom: 10px;  padding: 15px;">
  <span class="bold">Experiment: </span> <%= note.experiment.name if note.experiment %> 
  <span style="float: right;">
  <span class="margin-right: 5px;"><%= link_to "edit", edit_note_path(note), :class => "button blue" %></span>
  <%= link_to "delete", note, :confirm => 'Are you sure?', :method => :delete, :class => "button red" %> 
  </span>  <br />
  Attachment: <%= link_to("#{File.basename(note.attachment.url)}", note.attachment.url) if note.attachment.url %><br />
  <br />

  Text: <br />
  <div style="background: #f5f5f5; border-bottom: 1px solid #333; padding: 10px; ">
  <%= raw RedCloth.new(note.text).to_html %>
  </div>
  <%= note.created_at %> 
</div>